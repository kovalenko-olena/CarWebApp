@model CarWebApp.ViewModels.VehicleViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>VehicleSpr</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EncryptedId" />
            <div class="form-group">
                <label asp-for="RegNumber" class="control-label"></label>
                <input asp-for="RegNumber" class="form-control" />
                <span asp-validation-for="RegNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GarNumber" class="control-label"></label>
                <input asp-for="GarNumber" class="form-control" />
                <span asp-validation-for="GarNumber" class="text-danger"></span>
            </div>
            <div class="form-group" style="width:auto">
                <label asp-for="ModelSprName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="ModelSpr.Id" asp-items="@ViewBag.Model" class="custom-select mr-sm-2">
                        <option value="@ViewBag.Model"></option>
                    </select>
                </div>
                <span asp-validation-for="ModelSpr" class="text-danger"></span>
            </div>
            <div class="form-group" style="width:auto">
                <label asp-for="DriverSprName" class="control-label"></label>
                <div class="col-sm-10">
                    <select asp-for="DriverSpr.Id" asp-items="@ViewBag.Driver" class="custom-select mr-sm-2">
                        <option value="@ViewBag.Driver"></option>
                    </select>
                </div>
                <span asp-validation-for="DriverSpr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Norm" class="control-label"></label>
                <input type="number" step="0.01" asp-for="Norm" class="form-control" />
                <span asp-validation-for="Norm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
