@model CarWebApp.ViewModels.WayBillViewModel


<tr>
	<td>
		@Html.DisplayFor(model => model.Cd)
	</td>
	<td>
		@Convert.ToDateTime(Model.DtGive).ToString("dd.MM.yyyy")
	</td>
	<td>
		@Convert.ToDateTime(Model.DtReturn).ToString("dd.MM.yyyy")
	</td>
	<td>
		@Html.DisplayFor(model => model.VehicleSprName)
	</td>
	<td>
		@Html.DisplayFor(model => model.DriverSprName)
	</td>
	<td>
		@Html.DisplayFor(model => model.DtOut)
	</td>
	<td>
		@Html.DisplayFor(model => model.DtIn)
	</td>
	<td>
		@Html.DisplayFor(model => model.SpdOut)
	</td>
	<td>
		@Html.DisplayFor(model => model.SpdIn)
	</td>
	<td>
		@Html.DisplayFor(model => model.FuelSprName)
	</td>
	<td>
		@Html.DisplayFor(model => model.FuelBalOut)
	</td>
	<td>
		@Html.DisplayFor(model => model.FuelBalIn)
	</td>
	<td>
		@Html.DisplayFor(model => model.FuelFillUp)
	</td>
	<td>
		@Html.DisplayFor(model => model.FuelConsumNorm)
	</td>
	<td>
		@Html.DisplayFor(model => model.FuelConsumFact)
	</td>
	<td>
		<a asp-action="Edit" asp-route-id="@Model.EncryptedId" class="btn btn-outline-info">
