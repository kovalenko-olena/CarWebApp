<!--
	model IEnumerable<CarWebApp.ViewModels.WayBillViewModel>
		-->
@using CarWebApp.Infrastructure;
@model WayBillListViewModel;
@{
	ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<h1>WayBills</h1>

<p>
	<a asp-action="Create" class="btn btn-success">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus-fill" viewBox="0 0 16 16">
			<path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0z" />
		</svg>
		Create new
	</a>
	
	<a asp-action="PrintReport" class="btn btn-outline-success" width="16" height="16">
		<img src="~/lib/svg/printer-fill.svg" />
		Print Report
	</a>
</p>

@if (Model.WayBillViews!=null)
{
	<table class="table">
		<thead>
			@await Html.PartialAsync("IndexWayBillHead", Model.WayBillViews.FirstOrDefault())
		</thead>
		<tbody>
			@foreach (var p in Model.WayBillViews)
			{
				@await Html.PartialAsync("IndexWayBillSummary", p)
			}
		</tbody>
	</table>
}

<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
	 page-class="btn" page-class-normal="btn-secondary"
	 page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>
<partial name="_Total" />


