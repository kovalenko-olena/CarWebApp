@{
	ViewBag.Title = "Report";
}

@using (Html.BeginForm("PrintReport", "WayBill"))
{
	<div class="row">
		<form asp-action="Select">
			<div class="container">
				<div class="row">
					<div class="col-sm col-6">
						<div class="input-group mb-3">
							<span class="input-group-text col-md-3">
								<label class="control-label">Start date</label>
							</span>
							<input type="date" class="form-control" name="dt1" value=@ViewBag.dt1 />

						</div>
					</div>
					<div class="col-sm col-6">
						<div class="input-group mb-3">
							<span class="input-group-text col-md-3">
								<label class="control-label">End date</label>
							</span>
							<input type="date" class="form-control" name="dt2" value=@ViewBag.dt2 />

						</div>
					</div>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Select" class="btn btn-primary" />
			</div>
		</form>
	</div>
	<!--
			<input type="submit" value="Select" />

	-->
}
@await ViewBag.WebReport.Render()
