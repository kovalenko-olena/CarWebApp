@model IEnumerable<CarWebApp.ViewModels.BrandViewModel>

@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<h1>Brands</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cd)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.EncryptedId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EncryptedId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EncryptedId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_Total" />